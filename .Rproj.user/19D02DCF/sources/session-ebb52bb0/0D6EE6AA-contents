// script.js

function toggleDropdown() {
  var dropdown = document.getElementById("dropdown-content");
  if (dropdown.style.display === "none") {
    dropdown.style.display = "block";
  } else {
    dropdown.style.display = "none";
  }
}

function toggleDropdown2() {
  var dropdown = document.getElementById("dropdown-content2");
  if (dropdown.style.display === "none") {
    dropdown.style.display = "block";
  } else {
    dropdown.style.display = "none";
  }
}

function toggleDropdown3() {
  console.log("toggleDropdown3 function called"); // Check if the function is being called
  var dropdown = document.getElementById("dropdown-content3");
  console.log("dropdown:", dropdown); // Check if the dropdown element is being selected
  if (dropdown.style.display === "none") {
    dropdown.style.display = "block";
  } else {
    dropdown.style.display = "none";
  }
}
